<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/baseLayout">

    <ImageButton
        android:id="@+id/img_select_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginVertical="140dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/img_select_images" />

    <ImageButton
        android:id="@+id/text_select_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginVertical="140dp"
        android:layout_marginTop="100dp"
        android:layout_toEndOf="@+id/img_select_btn"
        android:layout_toRightOf="@+id/img_select_btn"
        android:background="@drawable/img_select_text"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp" />

</RelativeLayout>